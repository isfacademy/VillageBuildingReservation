@model IEnumerable<VillageBuildingReservation.Models.Reservation>
@using VillageBuildingReservation.Controllers
@using VillageBuildingReservation.Models

@{
    ViewBag.Title = "تقرير حجوزات القرية";
}


@using (Html.BeginForm("ReservationReport", "Reservations", FormMethod.Post))
{
    <h2 style="text-align:center">تقرير الحجوزات</h2>
        <div class="row RowFieldsStartEnd" style="margin-bottom:25px;">

            <div class="col-md-3">
                @Html.Label("من", htmlAttributes: new { @class = "control-label" })
                @Html.Editor("StartDate", new { htmlAttributes = new { @class = "form-control datepicker" } })
            </div>

            <div class="col-md-3">
                @Html.Label("الى", htmlAttributes: new { @class = "control-label " })
                @Html.Editor("EndDate", new { htmlAttributes = new { @class = "form-control datepicker" } })

            </div>


            <div class="col-md-2">
                <input type="submit" value="بحث" class="btnsearch btn btn-primary" />
            </div>


        </div>

}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8">
        <div class="col-md-1 reservation_need_barkya">
        </div>
        <div class="col-md-2">حجز بحاجة لبرقية</div>

        <div class="col-md-1 reservationEmpty">
        </div>
        <div class="col-md-3">حجز دون تحديد مبنى</div>
        <div class="col-md-1 resrvation_need_barkya_and_Empty">
        </div>
        <div class="col-md-4">حجز بحاجة لبرقية و دون تحديد مبنى</div>


    </div>
    <div class="col-md-1"></div>
</div>

<table class="table dataTable" id="Reservation_table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ReservationName)
            </th>
            <th>
                @Html.DisplayName("المباني المحجوزة")
            </th>
            <th>
                @Html.DisplayName("الأعتدة المستخدمة")
            </th>
            <th class="reservDatefixedwidth">
                @Html.DisplayNameFor(model => model.First().ReservationDate)
            </th>
            <th> الحضور</th>

            <th class="no-sort">
                @Html.DisplayNameFor(model => model.First().StartTime)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.First().EndTime)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.First().DocumentNumber)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.First().Notes)
            </th>

        </tr>

    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                var AttendanceTdId = "AttendanceTd" + item.Id;
                // red _ orange --> #FF4500
                // orange --> ffa500
                var backcolor = "";
                bool isEmpty = ReservationsController.IsEmptyReservation(item);
                // only reservation Empty and need barkya
                if (isEmpty && item.IsNeedBarkya)
                {
                    backcolor = "#ffdb99"; //red - yellow -- > orange
                }
                // reservation without building and no need barkya
                if (isEmpty && !item.IsNeedBarkya)
                {
                    backcolor = "#ffff9f"; //  yellow
                }
                if (!isEmpty && item.IsNeedBarkya)
                {
                    backcolor = "#ff9f9f"; // light red
                }
                if (!isEmpty && !item.IsNeedBarkya)
                {
                    backcolor = "white"; // white
                }


                <tr style="background:@backcolor">


                    <td style="font-size:16px">
                        <b>@Html.DisplayFor(modelItem => item.ReservationName)</b>
                    </td>
                    <td>
                        @ReservationsController.GetAllReservationBlocks_Of_Reservation(item)
                    </td>
                    <td>
                        @ReservationsController.GetAllReservationBombs_Of_Reservation(item)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservationDate)
                    </td>
                    <td id="@AttendanceTdId" data-isAttented="@item.IsAttended" data-id="@item.Id">
                        @if (item.IsAttended != null && item.IsAttended == true)
                        {
                            <img class="AttendedImage" src="~/Media/IsAttendedImage.png" />
                        }
                        else
                        {
                            if (item.IsAttended == false)
                            {
                                <img class="NotAttendedImage" src="~/Media/IsNotAttendedImage.png" />

                            }
                            else
                            {
                                if (Request.IsAuthenticated)
                                {
                                    if (User.IsInRole("admin"))
                                    {
                                        <a id="@item.Id" class="btn btn-danger btnApproveAttendance">تأكيد الحضور</a>
                                    }
                                    else
                                    {
                                        @Html.Label("-")
                                    }
                                }
                            }
                        }





                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>


                </tr>
            }
        }

    </tbody>
</table>

<div id="confirm-approve-attendance" title="تأكيد الحضور" style="display:none">
    <p>هل تريد تأكيد الحضور ؟ </p>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/DataTables")
    <script>
        $(document).ready(function () {
            if ($(".dataTable").length > 0) {
                $('.dataTable').DataTable({
                    "order": [],
                    "pageLength": 100,
                    "language": DataTablesLang,
                    "columnDefs": [{
                        "targets": 'no-sort',
                        "orderable": false

                    }]
                });
            }
        });
        $(document).ready(function () {
            var $option = $('select > .input-sm').children('option[value=100]');
            // and now set the option we want selected
            $option.attr('selected', true);
        });

        $('.ReservationReport').addClass("active");

    </script>



}
@section Styles {
    @Styles.Render("~/Content/DataTables")

    <style>
        .ui-dialog-titlebar-close {
            right: unset !important;
        }

        .ui-dialog-title {
            float: right !important;
            width: unset !important;
        }

        #confirm-approve-attendance > p {
            float: right;
        }

        .ui-widget-header {
            background: #2f7dcb !important;
        }

        .ui-dialog-titlebar-close {
            display: none;
        }

        .reservDatefixedwidth {
            width: 7% !important;
        }

        table {
            margin-top: 5% !important;
        }

        .RowFieldsStartEnd {
            margin-top: 2%;
            direction:rtl;
        }

            .RowFieldsStartEnd > .col-md-2, .RowFieldsStartEnd > .col-md-3 {
                float: right !important;
            }

        .btnsearch {
            margin-top: 12%;
        }
    </style>
}
